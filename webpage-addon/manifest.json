{
  "manifest_version": 2,
  "name": "Save to DB Add-On",
  "version": "1.0",
  "description": "Saves web pages to a local database",
  "permissions": [
    "activeTab",
    "http://localhost:5000/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Save Webpage"
  }
}
